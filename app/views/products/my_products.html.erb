<div class="container mt-5 mb-3">
  <div class="d-flex justify-content-between align-items-center m-3">
    <h1>MIS PRODUCTOS</h1>
    <%= link_to "Agregar producto", new_product_path, class:"btn btn-primary"%>
  </div>
  <div class="d-flex flex-wrap justify-content-center g-3">
    <% if @products.size > 0 %>
      <% @products.each do |product| %>
      <% if product.stock > 0 %>
        <div class="card mb-3 p-1" style="width: 18rem; height: 30rem">
          <% if product.photo.key != nil %>
            <%= cl_image_tag(product.photo.key, height: 200, width: 200, crop: :pad, class: "mx-auto") %>
            <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text">Fecha de vencimiento: <br> <%= product.expiration_date %></p>
          <p class="card-text">Precio: $<%= product.price %></p>
          <p class="card-text">Stock: <%= product.stock %></p>
          <%= link_to '<i class="fa-solid fa-trash "></i>'.html_safe, product_path(product.id),
            class: "position-icon",
            data: {turbo_method: :delete, turbo_confirm: "Â¿Seguro que quieres borrar este producto?"} %>
          <div class="d-flex justify-content-between ">
            <h4><%= link_to "Ver producto", product_path(product.id), class: "btn btn-primary",
              style: "--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %></h4>
            <h4><%= button_to "Editar", edit_product_path(product.id), class: "btn btn-primary",
              style: "--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %></h4>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
    <% else %>
    <p>No hay productos disponibles</p>
    <% end %>
  </div>
</div>
