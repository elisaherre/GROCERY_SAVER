<div class="container">
<h1><%= @product.name %></h1>
<% if @product.photo.key != nil %>
<%= cl_image_tag(@product.photo.key,
      width: 400, height: 300, crop: :fill) %>
<% end %>
<p>Category: <%=@product.category %></p>
<p>Expiration date: <strong><%=@product.expiration_date %></strong></p>
<p>Stock: <%=@product.stock %></p>
<p>Price: <%=@product.price %></p>
<% if @product.user == current_user %>
<h4><%= link_to "Editar", edit_product_path(@product.id), class: "btn btn-primary" %></h4>
<%= link_to "X", product_path(@product.id), data: {turbo_method: :delete, turbo_confirm: "Â¿Seguro que quieres borrar este producto?"} %>
<% end %>
<%= link_to "Comprar", products_path %>
<%= link_to "Volver", products_path %>
</div>
