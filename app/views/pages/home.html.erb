        </div>

        <div class="col-4 text-center d-flex flex-column">
          <div class="category-card">
            <i class="fas fa-bacon mb-2"></i>
            <%= link_to "PROCESADOS", category_path("procesados"), class: "text-decoration-none text-dark fw-bold" %>
          </div>
        </div>

        <div class="col-4 text-center d-flex flex-column">
          <div class="category-card">
            <i class="fas fa-seedling"></i>
            <%= link_to "GRANOS Y CEREALES", category_path("granos y cereales"), class: "text-decoration-none text-dark fw-bold" %>
          </div>
        </div>
      </div>


      <!--Categoria 2-->
      <div class="row d-flex justify-content-center mb-4">
        <div class="col-4 text-center d-flex flex-column">
          <div class="category-card">
            <i class="fas fa-glass-martini mb-2"></i>
            <%= link_to "BEBIDAS", category_path("bebidas"), class: "text-decoration-none text-dark fw-bold" %>
          </div>
        </div>

        <div class="col-4 text-center d-flex flex-column">
          <div class="category-card">
            <i class="fas fa-fish mb-2"></i>
            <%= link_to "CONGELADOS", category_path("congelados"), class: "text-decoration-none fw-bold text-dark" %>
          </div>
        </div>

        <div class="col-4 text-center d-flex flex-column">
          <div class="category-card">
            <i class="fas fa-bread-slice"></i>
            <%= link_to "PANADERÍA Y REPOSTERÍA", category_path("panadería y repostería"), class: "text-decoration-none text-dark fw-bold" %>
